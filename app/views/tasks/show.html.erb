<br/>

<div class="page-header">
  <h1><%= @task.description %>
  <div class='pull-right'>
    <%= link_to 'Edit', edit_project_task_path, class:'btn btn-info' %>
  </div>
</h1>
</div>

<ol class="breadcrumb">
  <li><a href="/projects">Projects</a></li>
  <li><%= link_to @project.name, project_path(@project) %></li>
  <li><%= link_to "Tasks", project_tasks_path(@project) %></li>
  <li><%= @task.description %></li>
</ol>

<div>
  <h3>
    Due Date: <%= @task.due_date %>
  </h3>
</div>

<div>
  <h3>Completed?:
  <% if @task.complete == true %>
    Yes
  <% else %>
    No
  <% end %>
  </h3>
</div>

<div class="container">
  <h3>Comments</h3>
  <% @task.comments.each do |comment| %>
    <div class="row">
      <div class="col-md-3">
        <div><%= comment.user.full_name %></div>
        <div class="text-muted"><%= time_ago_in_words comment.created_at %></div>
      </div>
      <div class="col-md-9">
        <%= comment.text %>
      </div>
    </div>
  <% end %>

  <div class="row">
    <div class="col-md-offset-2 col-md-9">
      <%= form_for [@project, @task, @comment] do |f| %>
      <div class="form-group">
        <%= f.text_field :text, class: "form-control" %>
      </div>
      <div class="form-group">
        <%= f.submit class: "btn btn-info" %>
      </div>
      <% end %>
    </div>
  </div>
</div>


<br/>
