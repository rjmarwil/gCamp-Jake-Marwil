<br/>

<div class="page-header">
  <h1><%= @project.name %>
  <div class='pull-right'>
    <%= link_to 'Edit', edit_project_path(@project), class:'btn btn-info' %>
    <%= link_to 'Delete', project_path(@project), method: :delete, data: { confirm: 'Are you sure?' }, class:'btn btn-danger' %>
  </div>
</h1>
</div>

<ol class="breadcrumb">
  <li><a href="/projects">Projects</a></li>
  <li class="active"><%= @project.name %></li>
</ol>

<p><%= link_to "#{@project.tasks.all.count} Tasks", project_tasks_path(@project) %></p>

<p><%= link_to "#{@project.memberships.all.count} Memberships", project_memberships_path(@project) %></p>
