<div class="container">
  <div class="row">
    <div class="col-md-12">

<p id="notice"><%= notice %></p>

<div class="page-header">
  <h1>Tasks
  <div class='pull-right'>
    <%= link_to 'New Task', new_task_path, class:'btn btn-info' %>
  </div>
  </h1>
</div>

<table class='table table-striped'>
  <thead>
    <tr>
      <th>Description</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @tasks.each do |task| %>
      <tr>
        <td><%= link_to task.description, task %></td>
        <td>
          <div class='text-right'>
            <%= link_to 'Edit', edit_task_path(task), class:'btn btn-info' %>
            <%= link_to 'Delete', task, method: :delete, data: { confirm: 'Are you sure?' }, class:'btn btn-danger' %>
          </div>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

</div>
</div>
