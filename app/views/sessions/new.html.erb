<div class="container">
  <div class="row">
    <div class="col-md-12">
      <div class="well">
        <h2>Sign Into gCamp!</h2><br/>

        <%= form_tag '/signin', html:{class:"form-horizontal"} do %>

        <% if alert %>
          <p class="alert alert-danger"><%= alert %></p>
        <% end %>

          <div class="form-group row">
            <div class="control-label col-md-2">
              <%= label_tag :email %>
            </div>
            <div class="form-controls col-md-4">
              <%= text_field_tag :email %>
            </div>
          </div>

          <div class="form-group row">
            <div class="control-label col-md-2">
              <%= label_tag :password %>
            </div>
            <div class="form-controls col-md-4">
              <%= password_field_tag :password %>
            </div>
          </div>

          <div class="form-group row">
            <div class="col-md-offset-2 col-md-4">
              <%= submit_tag "Sign In", class:"btn btn-primary" %>
            </div>
          </div>

        <% end %>

      </div>
    </div>
  </div>
