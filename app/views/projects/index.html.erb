<div class="page-header">
  <h1>Projects
  <div class='pull-right'>
    <%= link_to 'New Project', new_project_path, class:'btn btn-info' %>
  </div>
  </h1>
</div>

<% if current_user.admin? %>
<table class='table table-striped'>
  <thead>
    <tr>
      <th>Name</th>
      <th>Tasks</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @projects.each do |project| %>
      <tr>
        <td><%= link_to project.name, project %></td>
        <td><%= link_to project.tasks.all.count, project_tasks_path(project) %></td>
        <td>
          <% if current_user.project_owner?(project) %>
          <div class='text-right'>
            <%= link_to 'Edit', edit_project_path(project), class:'btn btn-info' %>
          </div>
          <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
<% else %>
<table class='table table-striped'>
  <thead>
    <tr>
      <th>Name</th>
      <th>Tasks</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% current_user.projects.each do |project| %>
      <tr>
        <td><%= link_to project.name, project %></td>
        <td><%= link_to project.tasks.all.count, project_tasks_path(project) %></td>
        <td>
          <% if current_user.project_owner?(project) %>
          <div class='text-right'>
            <%= link_to 'Edit', edit_project_path(project), class:'btn btn-info' %>
          </div>
          <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
<% end %>

