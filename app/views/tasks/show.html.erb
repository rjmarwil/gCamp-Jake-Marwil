<div class="container">
  <div class="row">
    <div class="col-md-12">
<br/>

<div class="page-header">
  <h1><%= @task.description %>
  <div class='pull-right'>
    <%= link_to 'Edit', edit_task_path(@task), class:'btn btn-info' %>
  </div>
</h1>
</div>

<div>
  <h3>
    Due Date: <%= @task.due_date %>
  </h3>
</div>

<div>
  <h3>Completed?:
  <% if @task.complete == true %>
    Yes
  <% else %>
    No
  <% end %>
  </h3>
</div>
<br/>

<ol class="breadcrumb">
  <li><a href="/tasks">Tasks</a></li>
  <li class="active"><%= @task.description %></li>
</ol>

</div>
</div>
