<div class="page-header">
  <h1>Tasks for <%= @project.name %>
  <div class='pull-right'>
    <%= link_to 'New Task', new_project_task_path, class:'btn btn-info' %>
  </div>
  </h1>
</div>

<ol class="breadcrumb">
  <li><a href="/projects">Projects</a></li>
  <li><%= link_to @project.name, project_path(@project) %></li>
  <li>Tasks</li>
</ol>

<table class='table table-striped'>
  <thead>
    <tr>
      <th>Description</th>
      <th>Complete</th>
      <th>Due</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @project.tasks.each do |task| %>
      <tr>
        <td><%= link_to task.description, project_task_path(task.project, task) %> <div class="badge"><%= task.comments.count %></div></td>
        <td><%= task.complete %></td>
        <td><%= task.due_date %></td>
        <td>
          <div class='text-right'>
            <%= link_to 'Edit', edit_project_task_path(task.project, task), class:'btn btn-info' %>
            <%= link_to '', project_task_path(task.project, task), method: :delete, data: { confirm: 'Are you sure?' }, class:'glyphicon glyphicon-remove' %>
          </div>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
