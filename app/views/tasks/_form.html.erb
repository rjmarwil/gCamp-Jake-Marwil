<%= form_for([@project, @task], html:{class:"form-horizontal"}) do |f| %>

<%= render partial: "shared/errors", locals: {object: @task} %>

<div class="form-group row">
  <%= f.label :description, :class => "control-label col-md-2" %>
  <div class="form-controls col-md-4">
    <%= f.text_field :description, :class => 'form-control', :id => "task_description" %>
  </div>
</div>

<div class="form-group row">
  <%= f.label :due_date, :class => "control-label col-md-2" %>
  <div class="form-controls col-md-4">
    <%= f.date_select :due_date, :class => 'form-control', :id => 'due_date' %>
  </div>
</div>

<div class="form-group row">
  <% unless @task.new_record? %>
  <div class="control-label col-md-2">
    <label>Completed?</label>
  </div>
  <div class="col-md-4">
    <% if @task.complete == true %>
    <%= f.check_box :complete, { :checked => 'checked'} %>
    <% else %>
    <%= f.check_box :complete %>
    <% end %>
  </div>
  <% end %>
</div>

<div class="form-group row">
  <div class="col-md-offset-2 col-md-4">
    <%= f.submit :class => "btn btn-primary" %>
    <%= link_to "Cancel", project_tasks_path, class: "btn btn-default" %>
  </div>
</div>

<% end %>
